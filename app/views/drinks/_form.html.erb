
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <%= form_for @drink do |f| %>
        <p>
          <%= f.label :Add_item %><br />
          <%= f.text_field :item %>
        </p>
      <p>
        <%= f.submit "Add to Drinks List", class: "btn btn-success" %> <br /><br />
        <%= link_to "View List", drinks_path, class: "btn btn-primary"%>
      </p>
    <% end %>
    </div>
  </div>
</div>