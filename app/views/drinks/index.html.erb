<div class="center jumbotron jumboIndex">
  <h2 class="text-center">Drinks Section</h2>
</div>
<%= render "layouts/flash" %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <p><%= link_to "Add an Item", new_drink_path, class: "btn btn-success" %></p>
        <table>
          <tr>
            <th class="boldText">Drinks Section</th>
          </tr>
          <% @drinks.each do |drinks| %>
            <tr>
              <td class="itemsFont"><%= drinks.item %><td>
              <td><%= link_to "Edit Item", edit_drink_path(drinks), class: "btn btn-primary bdr" %></td>
              <td><%= link_to "Delete Item", butcher_path(drinks), method: :delete, data: {confirm: "Deleted" }, class: "btn btn-danger bdr" %></td>
            </tr>
          <% end %>
        </table>
       
      </div>
    </div>
  </div>
</div>